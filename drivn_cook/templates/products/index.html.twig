{% extends 'base.html.twig' %}

{% block title %}{% trans %}Commande{% endtrans %}{% endblock %}

{% block body %}

    <div class="container mt-5 bg-white">

        <div class="mt-3" id="searchBar">
            {{ render(controller(
                'App\\Controller\\SearchController::searchBar'
            )) }}
        </div>

        <ul class="nav nav-tabs">
            <li class="nav-item">
              <a class="nav-link active" href="#" id="nav_fruits_legumes" data-target="#pane_fruits_legumes" data-toggle="tab">{% trans %}Fruits & légumes{% endtrans %}</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" id="nav_meat" data-target="#pane_meat" data-toggle="tab">{% trans %}Viandes poissons{% endtrans %}</a>
              </li>
            <li class="nav-item">
              <a class="nav-link" href="#" id="nav_milk" data-target="#pane_milk" data-toggle="tab">{% trans %}Produits laitiers{% endtrans %}</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#" id="nav_others" data-target="#pane_others" data-toggle="tab">{% trans %}Epicerie{% endtrans %}</a>
            </li>
        </ul>

        <div class="tab-content my-3">
            <div class="tab-pane active" id="pane_fruits_legumes">

                <div class="row d-flex align-items-stretch">
                    {% for product in pagination %}
                        <div class="col-3 mt-4">
                            <div class="border border-dark rounded p-2 clearfix">
                                <h3 class="text-center">
                                    {{ product.name }}
                                </h3>
                                <div class="text-center">
                                    <img class="img-fluid rounded" src="https://via.placeholder.com/150" alt="Image de {{ product.name }}">
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="ml-2">
                                        {{ product.price }} €
                                    </h5>
                                    <a href="{{ path('franchise_cart_add', {id: product.idProduct}) }}" class="btn btn-success float-right">
                                        <i class="fas fa-shopping-cart mr-1"></i>
                                        {% trans %}Ajouter{% endtrans %}
                                    </a>
                                </div>

                            </div>
            
                        </div>
                    {% endfor %}
                </div>

                <div class="navigation mt-2 py-4">
                    {{ knp_pagination_render(pagination) }}
                </div>

                <a class="btn btn-primary position-fixed" href="{{ path('franchise_cart_show') }}" style="bottom: 3.5vh; right: 5vh;">
                    {% trans %}Voir mon panier{% endtrans %}<i class="fas fa-chevron-right ml-2"></i>
                </a>
                
            </div>

            <div class="tab-pane" id="pane_meat">
                {% trans %}Viandes & poissons{% endtrans %}
            </div>
        
            <div class="tab-pane" id="pane_milk">
                {% trans %}Produits laitiers{% endtrans %}
            </div>

            <div class="tab-pane" id="pane_others">
                {% trans %}Epicerie{% endtrans %}
            </div>

        </div>

    </div>

{% endblock %}
