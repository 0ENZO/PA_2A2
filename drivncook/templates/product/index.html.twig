{% extends 'base.html.twig' %}

{% block title %}{% trans %}Commande{% endtrans %}
{% endblock %}

{% block body %}

	<div class="container mt-5 bg-white">

        <div class="p-4 mb-4 ">
            {{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}

                <div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
                    <span class="sr-only">Loading...</span>
                </div>
            
                <div class="row">
                    <div class="col-md-9">
                        {{ form_row(form.q) }}
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">Filtrer</button>
                    </div>
                </div>
                    
                <div class="row">
                    <div class="col">
                        <h4>Sous-catégories</h4>
                        {{ form_row(form.subCategories) }}
                    </div>

                    <div class="col">
                        <h4>Prix</h4>
                        <div class="col-md-6">
                            {{ form_row(form.max) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.min) }}
                        </div>
                        {# <div id="price-slider" data-min="{{ min }}" data-max="{{ max }}" style="margin-bottom: 3rem;"></div> #}
                    </div>

                    {# <div class="col">
                        <h4>Promotions</h4>
                        {{ form_row(form.promo) }}
                    </div> #}
                </div>
            {{ form_end(form) }}

            <hr>
        
        </div>
        
        <div class="tab-content my-3">
            {#}
            <div class="d-flex justify-content-end">
                {{ knp_pagination_sortable(products, 'Prix', 'p.price ') }} 
            </div>
            #}
            <div class="row d-flex align-items-stretch">
                {% for product in products %}
                    <div class="col-3 mt-4">
                        <div class="border border-dark rounded p-2 clearfix">
                            <h3 class="text-center">
                                {{ product.name }}
                            </h3>
                            <div class="text-center">
                                <img class="img-fluid rounded" src="https://via.placeholder.com/150" alt="Image de {{ product.name }}">
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="ml-2">
                                    {{ product.price }} €
                                </h5>
                                <a href="{{ path('franchise_cart_add', {id: product.id}) }}" class="btn btn-success float-right">
                                    <i class="fas fa-shopping-cart mr-1"></i>
                                    {% trans %}Ajouter{% endtrans %}
                                </a>
                            </div>

                        </div>
        
                    </div>
                {% endfor %}
            </div>

            <div class="navigation mt-2 py-4">
                {{ knp_pagination_render(products) }} 
            </div>
            <a class="btn btn-primary position-fixed" href="{{ path('franchise_cart_show') }}" style="bottom: 3.5vh; right: 5vh;">
                {% trans %}Voir mon panier{% endtrans %}<i class="fas fa-chevron-right ml-2"></i>
            </a>
        </div>
    </div>
{% endblock %}